{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmitOnError": false, // Cho phép biên dịch ngay cả khi có lỗi
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,  // Cho phép sử dụng JavaScript trong dự án TypeScript
    "noEmit": true,   // Ngừng xuất file nếu không muốn TypeScript biên dịch
    "resolveJsonModule": true,  // Nếu bạn sử dụng JSON như module
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}